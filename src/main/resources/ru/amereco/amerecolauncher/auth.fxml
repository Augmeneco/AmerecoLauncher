                  <Font name="Public Pixel" size="30.0" />
               </font></Label>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo.png" />
               </image>
            </ImageView>
            <GridPane maxHeight="60.0" maxWidth="300.0" minHeight="-Infinity" prefHeight="62.0" prefWidth="399.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
