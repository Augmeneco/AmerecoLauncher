               <font>
                  <Font size="20.0" />
               </font>
               <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" mouseTransparent="true" preserveRatio="true" translateX="-12.5">
                            <image>
                                <Image url="@images/settings.png" />
                            </image>                            
                        </ImageView>
                    </graphic>
            </Button>
            <Button fx:id="logoutBtn" layoutX="15.0" layoutY="532.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-font-size: 20;" onAction="#onLogoutPressed" prefHeight="35.0" prefWidth="35.0" styleClass="ninetile-button" text="Выход" textAlignment="CENTER" AnchorPane.bottomAnchor="45.0" AnchorPane.rightAnchor="5.0">
               <font>
                  <Font name="Public Pixel" size="20.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" mouseTransparent="true" preserveRatio="true" translateX="-12.5">
                     <image>
                        <Image url="@images/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="quitBtn" layoutX="15.0" layoutY="532.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#exitProgram" prefHeight="35.0" prefWidth="35.0" style="-fx-font-size: 20;" styleClass="ninetile-button" text="Завершить" textAlignment="CENTER" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
               <font>
                  <Font size="20.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" mouseTransparent="true" preserveRatio="true" translateX="-12.5">
                     <image>
                        <Image url="@images/power.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <VBox alignment="CENTER" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="507.0" prefWidth="517.0" spacing="5.0">
         <children>
            <Label maxHeight="66.0" maxWidth="500.0" minHeight="-Infinity" minWidth="500.0" prefHeight="66.0" prefWidth="500.0" text="Amereco Minecraft Server" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS" wrapText="true">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo.png" />
               </image>
            </ImageView>
            
            <Region prefHeight="50.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <Label fx:id="stageLabel" text="stage" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font></Label>
            <Label fx:id="stepLabel" text="step" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font></Label>
            <StackPane prefHeight="20.0" prefWidth="500.0">
               <children>
                  
                  <ProgressBar fx:id="progressBar" prefHeight="20.0" prefWidth="350.0" progress="0.25" />
                  <Label fx:id="progressLabel" text="progress" textAlignment="CENTER">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            
            <Button fx:id="mainButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#playOrUpdate" prefHeight="67.0" prefWidth="354.0" style="-fx-font-size: 20;" styleClass="ninetile-button" text="Играть" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Public Pixel" size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
